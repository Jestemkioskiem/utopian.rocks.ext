{
  "manifest_version": 2,
 
  "name": "Utopian Rocks Extension",
  "version": "0.1.0",
  "description": "Foo",

  "permissions": ["tabs"],

  "icons": { 
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },

  "browser_action": {
    "default_icon": "src/icons/icon48.png",
    "default_title": "Utopian Rocks",
    "default_popup": "src/popup/popup.html",
    "browser_style": true
  },
  
  "content_scripts": [{
    "js" : ["src/third_party/jquery.js", "src/main.js"],
    "matches": ["https://steemit.com*"]
  }]
}
